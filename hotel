Lib/xml.rkt:(define (numbered-attributes format-string x->xexpr attribute-values)
Lib/xml.rkt:  (for/list ((h attribute-values) (i (in-naturals))) 
Lib/xml.rkt:    `(,(format-symbol format-string (+ i 1)) ,(x->xexpr h))))
